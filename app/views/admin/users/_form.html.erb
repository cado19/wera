<%= bootstrap_form_for([:admin, @user], html: {multipart: true}) do |f| %>
  <div id="error-message">
   <% if @user.errors.any? %>
   	<p>Kindly rectify the following <%= pluralize(@user.errors.count, "error") %></p>
   	<ul>
   		<% @user.errors.full_messages.each do |msg| %>
   			<li><%= msg %></li>
   		<% end %>
   	</ul>
   <% end %>
  </div>

 <div class = "field">
  <%= f.text_field :name, class: 'form-control' %><br>
 </div>

 <div class = "field">
  <%= f.text_field :email, class: 'form-control' %><br>
 </div>

 <div class = "field">
  <%= f.password_field :password, class: 'form-control' %><br>
 </div>

 <div class = "field">
  <%= f.password_field :password_confirmation, class: 'form-control' %><br>
 </div>

 <div class="field">
  <%= f.collection_select(:role_id, Role.all, :id, :name)%><br>
 </div>

 <div class="field">
   <%= f.file_field :avatar, class: 'label-control' %>
 </div><br>

 <%= f.button 'Create User', class: 'btn btn-primary', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Saving Details..."} %>
<% end %>
