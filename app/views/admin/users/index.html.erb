<% title "Ziada | Users" %>
<h3>Users</h4>

<section class="content">
  <div class="box box-primary">
    <div class="box box-body">
      <%= link_to new_user_url, class: 'btn btn-primary pull-right' do%>
        <i class="fa fa-plus"></i>
        <span>Add User</span>
      <% end %>
      <br>

      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th><%= sort_link(@search, :email) %></th>
            <th><%= sort_link(@search, :name) %></th>
            <th>Role</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.email %></td>
              <td><%= user.name %></td>
              <td><%= user.role.name %></td>
              <td><%= link_to 'Details', admin_user_url(user), class: 'btn btn-default btn-sm' %></td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>
