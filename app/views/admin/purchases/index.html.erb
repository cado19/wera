<% title "Ziada | Purchases" %>
<h3 align="center">Purchases</h4>

<section class="content">
  <div class="box box-primary">
    <div class="box box-body">
      <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
          <%= link_to 'View Purchase', admin_purchases_path, class: 'nav-link active' %>
        </li>
        <li class="nav-item">
          <%= link_to 'New Purchase', new_admin_purchase_path, class: 'nav-link' %>
        </li>
      </ul>
      <br>

      <div class="pb-5">
        <div class="pull-right form-group">
          <%= text_field_tag :search, "", class: 'form-control searchField', placeholder: 'Search purchase..' %>
        </div>
      </div>

      <div class="row">
        <%= link_to 'Deleted Purchases', admin_deleted_purchases_url, class: 'btn btn-link' %>
      </div>

      <table class="table table-striped table-responsive-sm" id="myTable">
        <thead>
          <tr>
            <th><%= sort_link(@search, :product_name) %></th>
            <th><%= sort_link(@search, :quantity) %></th>
            <th>Purchase Price</th>
            <th><%= sort_link(@search, :total_price) %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @purchases.each do |purchase| %>
            <tr>
              <td><%= link_to purchase.product.name, admin_purchase_url(purchase) %></td>
              <td><%= purchase.quantity %></td>
              <td><%= purchase.product.purchase_price %></td>
              <td><%= purchase.total_price %></td>
          <% end %>
        </tbody>
      </table>
      <div class="apple_pagination">
        <div class="page_info">
          <%= page_entries_info @purchases %>
        </div>
        <%= will_paginate @purchases, container: false %>
      </div>
    </div>
  </div>
</section>
