<% title "Ziada | Categories" %>
<h3 align="center">Categories</h3>
<br>

<section class="content">
  <div class="box box-primary">
    <div class="box box-body">
      <ul class="nav nav-tabs" role="tablist">
        <li class="active"><%= link_to 'View Category', admin_categories_url %></li>
        <li><%= link_to 'New Category', new_admin_category_url %></li>
      </ul>
      <br>

      <div class="pull-right">
        <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal">
          <i class="fa fa-search"></i> Search Category
        </button>
      </div>

      <table class="table table-condensed table-responsive">
        <thead>
          <tr>
            <th><%= sort_link(@search, :name) %></th>
            <th>Number of Products</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= category.products.count %></td>
              <td><%= link_to 'Details', admin_category_url(category) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </box>
  </box>
</section>
<br>

<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">

      <!-- Modal Header -->
      <div class="modal-header">
        <h4 class="modal-title">Search Category</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div> <!-- /.modal-header -->

      <!-- Modal Body -->
      <div class="modal-body">
        <div class="row">
          <div class="container">
            <%= search_form_for @search, url: search_admin_categories_url do |f| %>
              <p>
                <%= f.label :name_cont, "Name" %>
                <%= f.text_field :name_cont %><br>
              </p>

              <p>
                <%= f.submit class: 'btn btn-sm' %>
              </p>
            <% end %>
          </div>
        </div>
      </div><!-- /.modal-body -->
      <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
        </div>
    </div><!-- -->
  </div>
</div><!-- -->
