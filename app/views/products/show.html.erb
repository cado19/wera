<% provide(:products, "active") %>
<% title "Ziada | Products - #{@product.name}" %>
<h2 align="center">Product Specifics</h2><br>

<div class="container">
  <div class="row">
    <div class="card" style="width: 18rem">
      <h5 class="card-title"><%= @product.name %></h5>
      <ul class="list-group list-group-flush">
        <li class="list-group-item"><strong>Purchase price:</strong> <%= @product.purchase_price %></li>
        <li class="list-group-item"><strong>Selling price:</strong> <%= @product.selling_price %></li>
        <li class="list-group-item"><strong>Category:</strong> <%= @product.category.name %></li>
        <li class="list-group-item"><strong>Manufacturer:</strong> <%= @product.manufacturer %></li>
      </ul>
    </div>
  </div> <!-- /row    -->
  <%= link_to 'Back', products_path, class: 'btn btn-info' %>

</div> <!-- /container    -->
