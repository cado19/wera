<section class="content">
  <div class="box box-primary">
    <div class="box box-body">
      <p>
        <strong>Name:</strong>
        <%= @supplier.name %>
      </p>

      <p>
        <strong>Telephone:</strong>
        <%= @supplier.telephone %>
      </p>

      <p>
        <strong>Email:</strong>
        <%= @supplier.email %>
      </p>

      <%= link_to 'Back to purchases', admin_suppliers_path, class: 'btn btn-sm btn-primary' %> |
      <%= link_to 'Edit', edit_admin_supplier_path(@supplier), class: 'btn btn-sm btn-default' %> |
      <%= link_to 'Delete',
          admin_supplier_url(@supplier),
          method: :delete,
          class: 'btn btn-sm btn-danger',
          data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
</section>
