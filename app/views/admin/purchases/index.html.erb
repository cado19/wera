<% title "Ziada | Purchases" %>
<h3>Purchases</h4>

<section class="content">
  <div class="box box-primary">
    <div class="box box-body">
      <ul class="nav nav-tabs" role="tablist">
        <li class="active"><%= link_to 'View Purchase', admin_purchases_path %></li>
        <li><%= link_to 'New Purchase', new_admin_purchase_path %></li>
      </ul>

      <br>

      <table class="table table-striped table-responsive">
        <thead>
          <tr>
            <th><%= sort_link(@search, :product_name) %></th>
            <th><%= sort_link(@search, :quantity) %></th>
            <th>Purchase Price</th>
            <th><%= sort_link(@search, :total_price) %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @purchases.each do |purchase| %>
            <tr>
              <td><%= link_to purchase.product.name, admin_purchase_url(purchase) %></td>
              <td><%= purchase.quantity %></td>
              <td><%= purchase.product.purchase_price %></td>
              <td><%= purchase.total_price %></td>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>
