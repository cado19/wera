<aside class="main-sidebar">
<!-- sidebar: style can be found in sidebar.less -->
<section class="sidebar" style="height: auto;">
  <!-- User Panel -->
  <div class="user-panel">
    <div class="pull-left image">
      <%= image_tag current_user.avatar.url(:medium), class: "img-circle img-responsive admin-image" %>
    </div>
    <div class="pull-left info">
      <p><%= current_user.name %></p>
      <a href="#">
        <i class="fa fa-circle text-success"></i>
        Online
      </a>
    </div>
  </div>
  <!-- Navigation Elements -->
  <ul class="sidebar-menu tree" data-toggle="tree">
    <li class="header">MAIN NAVIGATION</li>
    <li class="treeview">
     <%= link_to admin_root_url do %>
      <i class="fa fa-dashboard"></i>
      <span>Dashboard</span>
     <% end %>
    </li>

    <li class="treeview">
     <%= link_to admin_categories_url do %>
      <i class="fa fa-th-large"></i>
      <span>Categories</span>
     <% end %>
    </li>

    <li class="treeview">
     <%= link_to admin_products_url do %>
      <i class="fa fa-cubes"></i>
      <span>Products</span>
     <% end %>
    </li>

    <li class="treeview">
     <%= link_to admin_sales_url do %>
      <i class="fa fa-database"></i>
      <span>Sales</span>
     <% end %>
    </li>

    <li class="treeview">
     <%= link_to admin_purchases_url do %>
      <i class="fa fa-credit-card"></i>
      <span>Purchases</span>
     <% end %>
    </li>

    <li class="treeview">
     <%= link_to admin_users_url do %>
      <i class="fa fa-user"></i>
      <span>Users</span>
     <% end %>
    </li>

    <li class="treeview">
     <%= link_to root_url do %>
      <i class="fa fa-power-off"></i>
      <span>Exit</span>
     <% end %>
    </li>

  </ul>
</section>

</aside>
