<% title "Ziada | Deleted Purchases" %>
<h3 align="center">Deleted Purchases</h4>

<section class="content">
  <div class="box box-primary">
    <div class="box box-body">
      <div class="pb-5">
        <div class="pull-right form-group">
          <%= text_field_tag :search, "", class: 'form-control searchField', placeholder: 'Search purchase..' %>
        </div>
      </div>

      <table class="table table-striped table-responsive-sm" id="myTable">
        <thead>
          <tr>
            <th><%= sort_link(@search, :product_name) %></th>
            <th><%= sort_link(@search, :quantity) %></th>
            <th>Purchase Price</th>
            <th><%= sort_link(@search, :total_price) %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @purchases.each do |purchase| %>
            <tr>
              <td><%= link_to purchase.product.name, admin_purchase_url(purchase) %></td>
              <td><%= purchase.quantity %></td>
              <td><%= purchase.product.purchase_price %></td>
              <td><%= purchase.total_price %></td>
          <% end %>
        </tbody>
      </table>
      <%= will_paginate @purchases %>
    </div>
  </div>
</section>
