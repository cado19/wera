<%= form_for @account  do |f|%>
	<div class="form-group">
		<%= f.label :name %>
		<%= f.text_field :name, class: 'form-control'%><br>
	</div>
	<div class="form-group">
		<%= f.label :subdomain %>
		<%= f.text_field :subdomain, class: 'form-control'%><br>
	</div>
	<div class="form-group">
		<%= f.label :country %>
		<%= f.select :country, ['Kenya', 'Uganda', 'Tanzania'], {}, {class: 'form-control'} %><br>
	</div>

		<%= f.button "Create Account", class: 'btn btn-primary', data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Saving Details..."}%>
		<%= link_to 'Cancel', welcome_home_url, class: 'btn btn-danger' %>
	</div>
<% end %>
