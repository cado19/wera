<% title "Ziada | Products - Listing" %>
<section class="content-header">
  <h3 align="center">Products Listing</h3>
</section>

<section class="content">
  <div class="box box-primary">
    <div class="box box-body">
      <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item">
          <%= link_to 'View Products', admin_products_path, class: 'nav-link active' %>
        </li>
        <li class="nav-item">
          <%= link_to 'New Product', new_admin_product_path, class: 'nav-link' %>
        </li>
      </ul>

      <br>
      <ul class="nav nav-pills">
        <li class="nav-item">
          <%= link_to 'All Products', admin_products_url, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Out of stock', admin_unavailable_products_url, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Deleted products', admin_deleted_products_url, class: 'nav-link' %>
        </li>
      </ul>

      <div class="pull-right form-group">
        <%= text_field_tag :search, "", class: 'form-control searchField', placeholder: 'Search product..' %>
      </div>
      <br>

      <table class="table table-condensed table-responsive-sm" id="myTable">
        <thead>
          <tr>
            <th><%= sort_link(@search, :name) %></th>
            <th><%= sort_link(@search, :purchase_price) %></th>
            <th><%= sort_link(@search, :selling_price) %></th>
            <th>Category</th>
          </tr>
        </thead>

        <tbody>
          <% @products.each do |product| %>
            <tr>
              <td><%= link_to product.name, admin_product_url(product) %></td>
              <td><%= product.purchase_price %></td>
              <td><%= product.selling_price %></td>
              <td><%= product.category.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= will_paginate @products %>
    </div>
  </div>
</section>
