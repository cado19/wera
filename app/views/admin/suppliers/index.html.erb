<p id="notice"><%= notice %></p>

<section class="content-header">
  <h3 align="center">Suppliers</h3>
</section>

<section class="content">
  <div class="box box-primary">
    <div class="box box-body">
      <ul class="nav nav-tabs" role="tablist">
        <li class="active"><%= link_to 'View Supplier', admin_suppliers_path %></li>
        <li><%= link_to 'New Supplier', new_admin_supplier_path %></li>
      </ul>

      <table class="table table-condensed table-responsive">
        <thead>
          <tr>
            <th>Name</th>
            <th>Telephone</th>
            <th>Email</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @suppliers.each do |supplier| %>
            <tr>
              <td><%= supplier.name %></td>
              <td><%= supplier.Telephone %></td>
              <td><%= supplier.email %></td>
              <td><%= link_to 'Show', admin_supplier_url(supplier) %></td>
              <td><%= link_to 'Edit', edit_admin_supplier_url(supplier) %></td>
              <td><%= link_to 'Destroy', admin_supplier_url(supplier), method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</section>
