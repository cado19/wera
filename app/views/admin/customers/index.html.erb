<% title "Ziada | Customers" %>
<h3 align="center">Customers</h3>
<br>

<section class="content">
  <div class="box box-primary">
    <div class="box box-body">
      <table class="table table-responsive-sm" id="dttb">
        <thead>
          <tr>
            <th><%= sort_link(@search, :name) %></th>
            <th><%= sort_link(@search, :contact) %></th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= customer.name %></td>
              <td><%= customer.contact %></td>
              <td><%= link_to 'Details', admin_customer_url(customer) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= will_paginate @customers %>
    </div>
  </div>
</section>
<br>
