<%= form_for([:admin, @purchase]) do |f| %>
    <div class="col-sm-10 col-md-10">
      <div class="container">
        <% if @purchase.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@purchase.errors.count, "error") %> prohibited this purchase from being saved:</h2>

            <ul>
            <% @purchase.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
      </div>
    <div class="form-group">
      <%= f.label :product %>
      <%= f.collection_select(:product_id, Product.all, :id, :name, {prompt: 'Select a product'}, {class: 'form-control'}) %>
    </div>
    <div class="form-group">
      <%= f.label :quantity %>
      <%= f.text_field :quantity, class: 'form-control' %>
    </div>

    <p id="button-paragraph">
       <%= f.button class: "btn btn-sm btn-primary", data: {disable_with: "<i class='fa fa-spinner fa-spin'></i> Saving Details..."} %>
       <%= link_to 'Cancel', admin_purchases_path, class: 'btn btn-sm btn-danger' %>
    </p>


<% end %>
