<% title "Ziada | Categories" %>
<h3 align="center">Categories</h3>
<br>

<section class="content">
  <div class="box box-primary">
    <div class="box box-body">
      <ul class="nav nav-tabs">
        <li class="nav-item">
          <%= link_to 'View Category', admin_categories_url, class: 'nav-link active' %>
        </li>
        <li class="nav-item">
          <%= link_to 'New Category', new_admin_category_url, class: 'nav-link' %>
        </li>
      </ul>
      <br>

      <div class="row">
        <%= link_to 'Deleted categories', admin_deleted_categories_url, class: 'btn btn-link' %>
      </div>
      <div class="pull-right form-group">
          <%= text_field_tag :search, "", class: 'form-control searchField', placeholder: 'Search category..' %>
      </div>

      <table class="table table-responsive-sm" id="myTable">
        <thead>
          <tr>
            <th><%= sort_link(@search, :name) %></th>
            <th>Number of Products</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%= category.name %></td>
              <td><%= category.products.count %></td>
              <td><%= link_to 'Details', admin_category_url(category) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= will_paginate @categories %>
    </box>
  </box>
</section>
<br>
