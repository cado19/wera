<!-- This partial renders each cart item -->
<% @cart.sale_items.each do |item| %>
  <div class="row">
    <div class="col-sm-6">
      <%= item.product.name %>
    </div>
    <div class="col-sm-4">
      <%= form_for(item, remote: true) do |f| %>
        <%= f.hidden_field :product_id, value: item.product.id %>
        <h5><%= item.product.selling_price %></h5>
        <div class="form-group">
          <%= f.number_field :quantity, value: item.quantity.to_i, class: 'form-control' %>
        </div>
        <div class="btn-group">
            <%= f.submit 'Update quantity', class: 'btn btn-success' %>
            <%= link_to 'Delete', item, method: :delete, remote: true, class: 'btn btn-danger' %>
        </div>
        <span>Total: <%= item.total_price %></span>
      <% end %>
    </div>
  </div>
<% end %>
