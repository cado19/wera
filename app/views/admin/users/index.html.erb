<% title "Ziada | Users" %>
<h3>Users</h4>

<section class="content">
  <div class="box box-primary">
    <div class="box box-body">
      <ul class="nav nav-tabs">
        <li class="active nav-item"><%= link_to 'View Users', admin_users_url %></li>
        <li class="nav-item"><%= link_to "New User", new_admin_user_url %></li>
      </ul>
      <br>

      <div class="pb-5">
        <div class="pull-right">
          <%= text_field_tag :search, "", class: 'form-control searchField', placeholder: 'Search user..' %>
        </div>
      </div>

      <table class="table table-striped table-responsive" id="myTable">
        <thead>
          <tr>
            <th><%= sort_link(@search, :email) %></th>
            <th><%= sort_link(@search, :name) %></th>
            <th>Role</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
            <tr>
              <td><%= user.email %></td>
              <td><%= user.name %></td>
              <td><%= user.role.name %></td>
              <td><%= link_to 'Details', admin_user_url(user), class: 'btn btn-default btn-sm' %></td>
          <% end %>
        </tbody>
      </table>
      <%= will_paginate @users %>
    </div>
  </div>
</section>
